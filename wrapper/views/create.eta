	<script>
	//horay hard parT
		let lvm = "";
		// filter the list
		const params = new URLSearchParams(window.location.search);
		// default to all themes
		const filter = params.get("filter") || "vl";
		if (filter == "cc")
		{	
		$(".theme").not("[data-has-cc]").hide();
		}
		const setTing = localStorage.getItem("SELECTION");
		document.getElementById('videomakers').style.display='block';
		document.getElementById('cc').style.display='none';

		if (localStorage.getItem("SELECTION") == "false" && params.get("filter") != "cc")
		{
		document.getElementById('videomakers').style.display='none';
		document.getElementById('themes').style.display='block';
		document.getElementById("textron").innerHTML = "Choose A Theme";
		}
		else if (params.get("filter") != "cc")
		{
		document.getElementById('themes').style.display='none';	
		}
		else if (localStorage.getItem("SELECTION") == "false" && params.get("filter") == "cc")
		{
		document.getElementById('videomakers').style.display='none';
		document.getElementById('cc').style.display='none';
		document.getElementById('themes').style.display='block';
		document.getElementById("textron").innerHTML = "Choose A Theme";		
		}
		else if (params.get("filter") == "cc")
		{
		document.getElementById('videomakers').style.display='none';
		document.getElementById('themes').style.display='none';
		document.getElementById('cc').style.display='block';
		}	


		function redirect(tId, ccId = false) {
			if (filter == "cc") {
				window.location.href = `./cc_browser?themeId=${ccId}&v=${lvm}`;
				return;
			}
			else if (lvm != "2016" && lvm != "2015")
			{
			if (lvm == "2014" || lvm == "2013")
			{
			window.location.href = `./old_full?tray=${tId}`;
			}
			else
			{
			window.location.href = `./old_full?tray=${tId}&v=${lvm}`;			
			}
			}
			else
			{
			window.location.href = `./go_full?tray=${tId}&v=${lvm}`;
			}
		}

		function show(version, iscc)
		{
		lvm = version;
		document.getElementById('videomakers').style.display='none';
		document.getElementById('cc').style.display='none';
		if (lvm == "2013" | lvm == "2014" | lvm == "2012" && iscc)
		{
		$(".theme").not("[data-has-oldcc]").hide();
		}
		else if (lvm == "2012" | lvm == "2013" | lvm == "2015" | lvm == "2010" | lvm == "2011" | lvm == "2014" && !iscc)
		{
		if (lvm != "2012" && lvm != "2011" && lvm != "2010")
		{
		document.getElementById('business-old').style.display='none';
		console.log("Business hid");
		}
		else if (lvm == "2010")
		{
		document.getElementById('business').style.display='none';		
		console.log("New Business hid");
		}
		$(".theme").not("[data-isold]").hide();
		}
		else if (lvm == "2010" && iscc)
		{
		$(".theme").not("[data-2010]").hide();
		}
		$.post("/api/settings/update", {"setting":"SELSION","value":lvm})
		document.getElementById('themes').style.display='block';	
		}

	</script>

