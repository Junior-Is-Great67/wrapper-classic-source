	function nextStep(stev, id = "")
	{
	if (stev == 0.5)
	{
	document.getElementById("char1").value = id;
	document.getElementById("step1text").innerHTML = "Step 1.5, Grab your second char!";
	step = 1;
	loadFirstPage();
	}
	else if (stev == 1)
